{
  "manifest_version": 2,
  "name": "Tenhou Is 0w0 U",
  "version": "0.1.0",

  "description": "Unoffical add-on for Tenhou games subscription. Please play it at https://tenhou.net/0/wg/",

  "icons": {
    "48": "icons/border-48.png"
  },

  "content_scripts": [
    {
      "matches": ["*://tenhou.net/0/wg/*"],
      "js": ["0w0.js"]
    }
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },

  "permissions": ["storage", "notifications"],
  "applications": {
    "gecko": {
      "id": "tenhou-0w0-u@wabilin.github.io",
      "strict_min_version": "57.0a1"
    }
  }
}
